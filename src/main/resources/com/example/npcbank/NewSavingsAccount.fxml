<?xml version="1.0" encoding="UTF-8"?>
<!-- NewSavingAccount.fxml -->

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.npcbank.controllers.NewSavingsAccountController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <HBox>
        <Label text="Owner Name: "/>
        <TextField fx:id="tfOwnerName" ></TextField>
    </HBox>
    <HBox>
        <Label text="Account Number: "/>
        <TextField fx:id="tfAccountNumber" ></TextField>
    </HBox>

    <Button text="Save Data!" onAction="#onSaveDataClick"/>

</VBox>
