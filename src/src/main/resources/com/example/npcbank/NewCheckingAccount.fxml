<?xml version="1.0" encoding="UTF-8"?>

<!-- NewCheckingAccount.fxml -->

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="CENTER" prefHeight="292.0" prefWidth="770.0" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.npcbank.controllers.NewCheckingAccountController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <children>
        <VBox prefHeight="200.0" prefWidth="150.0">
            <children>
                <Label prefHeight="20.0" prefWidth="121.0" text="Owner Name: " />
                <Label prefHeight="20.0" prefWidth="118.0" text="Account">
               <padding>
                  <Insets top="5.0" />
               </padding></Label>
                <Label prefHeight="20.0" prefWidth="119.0" text="Email">
               <padding>
                  <Insets top="10.0" />
               </padding></Label>
                <Label prefHeight="20.0" text="Balance">
               <padding>
                  <Insets top="10.0" />
               </padding></Label>
                <Label prefHeight="20.0" text="Status">
               <padding>
                  <Insets top="20.0" />
               </padding></Label>
            </children>
        </VBox>
        <VBox prefHeight="252.0" prefWidth="700.0">
            <children>
                <TextField fx:id="tfOwnerName" prefHeight="25.0" prefWidth="74.0" />
             <TextField fx:id="tfAccount" onMouseClicked="#onAccountClicked" />
                <TextField fx:id="tfEmail" />
                <TextField fx:id="tfBalance" onMouseClicked="#onBalanceClicked" />
                <Label fx:id="lblStatus" prefHeight="100.0" prefWidth="200.0" text="Label" wrapText="true" />
              <Button onAction="#onSaveDataClick" text="Save Data" />
            <Button mnemonicParsing="false" onAction="#onArchiveDataClick" text="Archive Data" />
            </children>
        </VBox>
    </children>
</HBox>
