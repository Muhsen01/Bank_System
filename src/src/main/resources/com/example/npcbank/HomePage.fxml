<?xml version="1.0" encoding="UTF-8"?>

<!-- HomePage.fxml -->

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<?import com.example.npcbank.AccountsSummary?>
<VBox onMouseEntered="#updateDisplay" alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/19" fx:controller="com.example.npcbank.controllers.HomePageController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Button onAction="#onNewSavingsAccountButtonClick" text="New Savings Account" />
    <Button onAction="#onNewCheckingAccountButtonClick" text="New Checking Account" />
    <Button onAction="#onNewTransactionButtonClick" text="New Transaction" />
    <Button onAction="#onDetailsPage" text="Details Page"/>

    <AccountsSummary fx:id="summaryDisplay"/>
</VBox>
